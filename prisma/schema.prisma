// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// User model for authentication and user management
model User {
  id                  String    @id @default(cuid())
  email               String    @unique
  emailVerified       DateTime?
  name                String?
  image               String?
  password            String?   // Hashed password for credentials auth
  plan                String?   @default("free") // "free", "pro", "enterprise"
  subscriptionStatus  String?   // "active", "canceled", "expired", null
  subscriptionExpiresAt DateTime?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  // Relations
  accounts      Account[]
  sessions      Session[]
  spaces        Space[]         @relation("SpaceOwner")
  conversations Conversation[]
  integrations  Integration[]
  documents     DocumentIndex[]

  @@map("users")
}

// Account model for OAuth providers (Auth.js)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// Session model for Auth.js
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// Verification token for email verification (Auth.js)
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Space model for organizing conversations and documents
model Space {
  id          String   @id @default(cuid())
  name        String
  description String?
  slug        String   @unique
  ownerId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  owner         User            @relation("SpaceOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  conversations Conversation[]
  documents     DocumentIndex[]
  integrations  Integration[]

  @@map("spaces")
}

// Conversation model for chat conversations
model Conversation {
  id        String   @id @default(cuid())
  title     String?
  userId    String
  spaceId   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  space    Space?    @relation(fields: [spaceId], references: [id], onDelete: SetNull)
  messages Message[]

  @@map("conversations")
}

// Message model for individual messages in conversations
model Message {
  id             String   @id @default(cuid())
  conversationId String
  role           String // "user" | "assistant" | "system"
  content        String   @db.Text
  model          String? // AI model used (e.g., "gpt-4", "claude-3", "gemini-pro")
  provider       String? // AI provider (e.g., "openai", "anthropic", "google")
  metadata       Json? // Additional metadata (tokens, latency, etc.)
  createdAt      DateTime @default(now())

  // Relations
  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@map("messages")
}

// Integration model for third-party integrations
model Integration {
  id          String   @id @default(cuid())
  type        String // "github" | "confluence" | "microsoft_graph" | "custom"
  name        String
  userId      String
  spaceId     String?
  config      Json // Integration-specific configuration
  credentials Json? // Encrypted credentials
  enabled     Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  space Space? @relation(fields: [spaceId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([type])
  @@map("integrations")
}

// DocumentIndex model for vector embeddings and document search
model DocumentIndex {
  id        String                       @id @default(cuid())
  title     String
  content   String                       @db.Text
  url       String? // Source URL if applicable
  source    String? // Source type (e.g., "github", "confluence", "upload")
  sourceId  String? // ID in the source system
  userId    String
  spaceId   String?
  embedding Unsupported("vector(1536)")? // pgvector embedding (1536 dimensions for OpenAI)
  metadata  Json? // Additional metadata
  createdAt DateTime                     @default(now())
  updatedAt DateTime                     @updatedAt

  // Relations
  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  space Space? @relation(fields: [spaceId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([spaceId])
  @@index([source, sourceId])
  // Note: Vector similarity search will use pgvector's built-in functions
  @@map("document_indexes")
}
